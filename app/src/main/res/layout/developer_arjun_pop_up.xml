<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/close_popup_arjun"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_close" />

    <ProgressBar
        android:id="@+id/developerArjunPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/developerArjunIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/developer_arjunTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developerArjunIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Arjun S G"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/developer_arjun_descTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developer_arjunTV"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="22dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="Freelance Developer"
        android:textSize="18dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/dev_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developer_arjun_descTV"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/arjun_gmail"
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:padding="8dp"
                android:onClick="openGmail"
                android:src="@drawable/ic_gmail" />

            <ImageView
                android:id="@+id/arjun_linked_in"
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:padding="8dp"
                android:src="@drawable/ic_linkedin" />

            <ImageView
                android:id="@+id/arjun_github"
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:padding="8dp"
                android:src="@drawable/ic_github" />


            <ImageView
                android:id="@+id/arjun_whatsapp"
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:padding="8dp"
                android:src="@drawable/ic_whatsapp" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/arjun_prev"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingStart="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_arrow_back_24"/>


</RelativeLayout>